<div class="auth-form px-5 py-3">
<h2 class="text-center"><%= ::Temple::Utils.escape_html((t('devise.registrations.sign_up'))) %>
</h2><p class="text-center"><%= ::Temple::Utils.escape_html((t('devise.registrations.sign_up_text'))) %>

</p><% _slim_controls1 = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
 %><div class="alert alert-danger">
<%= ::Temple::Utils.escape_html((devise_error_messages!)) %>
</div><div class="field mb-2">
<%= ::Temple::Utils.escape_html((f.text_field :first_name, autofocus: true, autocomplete: 'given-name',
placeholder: t('devise.registrations.first_name'), class: 'form-control')) %>
</div><div class="field mb-2">
<%= ::Temple::Utils.escape_html((f.text_field :last_name, autocomplete: 'family-name', placeholder: t('devise.registrations.last_name'),
class: 'form-control')) %>
</div><div class="field mb-2">
<%= ::Temple::Utils.escape_html((f.text_field :email, autocomplete: 'email', placeholder: t('devise.sessions.email'),
class: 'form-control')) %>
</div><div class="field mb-2">
<% if @minimum_password_length
 %><p class="mb-1"><%= ::Temple::Utils.escape_html((t('devise.registrations.password_min_length', count: @minimum_password_length))) %>
</p><%= ::Temple::Utils.escape_html((f.password_field :password, autocomplete: 'new-password', placeholder: t('devise.registrations.password'),
class: 'form-control')) %>
<% end %></div><div class="field mb-3">
<%= ::Temple::Utils.escape_html((f.password_field :password_confirmation, autocomplete: 'new-password',
placeholder: t('devise.registrations.password_repeat'), class: 'form-control')) %>
</div><div class="actions mb-2">
<%= ::Temple::Utils.escape_html((f.submit t('devise.registrations.sign_up'), data: { disable_with: t('devise.registrations.signing_up') },
class: 'btn btn-login')) %>

</div><% end %><%= ::Temple::Utils.escape_html((_slim_controls1)) %><%= ::Temple::Utils.escape_html((render 'devise/shared/links')) %>
</div>
