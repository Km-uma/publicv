<div class="middle-container-1">
  <div class="row py-40 py-md-80 mx-0">
    <div class="col-12 col-md-8 col-xl-4 mx-auto">
      <div class="card border-0 rounded">
        <div class="card-header text-center border-0 py-5">
          <h5><%= t('devise.passwords.change_form_label') %></h5>
        </div>
        <div class="card-body p-5 border-left border-bottom border-right">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <%= devise_error_messages! %>
            </div>
            <% end %>
            <%= f.hidden_field :reset_password_token %>
            <div class="col-12">
              <h6 class="mb-5"><%= t('devise.registrations.password_min_length', count: @minimum_password_length) %></h6>
            </div>
            <div class="col-12">
              <div class="form-group mb-5 input-with-icon">
                <label class="text-muted d-block"><%= t('devise.registrations.password') %></label>
                <span class="input-icon text-muted"><i class="icon-lock"></i></span>
                <%= f.password_field :password, autocomplete: 'new-password', placeholder: t('devise.registrations.password'), class: 'form-control form-control-lg pl-40' %>
              </div>
            </div>
            <div class="col-12">
              <div class="form-group input-with-icon">
                <label class="text-muted d-block"><%= t('devise.passwords.confirm_password') %></label>
                <span class="input-icon text-muted"><i class="icon-lock"></i></span>
                <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: t('devise.registrations.password_repeat'), class: 'form-control form-control-lg pl-40' %>
              </div>
            </div>
            <div class="py-5 w-100">
              <%= f.submit "Change my password", data: { disable_with: t('devise.passwords.sending_button') },
              class: 'btn btn-primary w-100 rounded' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
