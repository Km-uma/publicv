<div class="auth-form px-5 py-3">
<h2 class="text-center"><%= t('devise.passwords.forgot_password') %>
</h2><p class="text-center"><%= t('devise.passwords.forgot_password_text') %>

</p><%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %><div class="alert alert-danger">
<%= devise_error_messages! %>
</div><div class="field mb-3">
<%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: t('devise.sessions.email'),
class: 'form-control' %>
</div><div class="actions mb-2">
<%= f.submit t('devise.passwords.send_button'), data: { disable_with: t('devise.passwords.sending_button') },
class: 'btn btn-login' %>

</div><% end %><%= render 'devise/shared/links' %>
</div>
