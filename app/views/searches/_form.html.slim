h4.text-center = t('content.main.search.header')
= form_tag search_path, method: :get, remote: true do
  .row
    .col.mb-3
      = text_field_tag :search_term, params[:search_term], class: 'form-control'
  .row
    .col.mb-3
      = submit_tag t('content.main.buttons.search'), data: { disable_with: t('content.main.buttons.searching') },
              class: 'btn btn-standard'
