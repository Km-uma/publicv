<p class="mb-0 pt-5 font-size-14"><%= @results.count %> Results Found</p>
<div class="row">
  <% @results.each do |cv| %>
    <div class="col-12 pt-5">
      <div class="card shadow-sm border-0 rounded">
        <div class="card-body p-3">
          <div class="d-flex align-items-center justify-content-between">
            <%= image_tag(cv.headshot.url(:default), alt: "#{cv.abbr_name} headshot", class: 'img-fluid') %>
            <div class="w-100 pl-3">
              <p class="mb-0 font-size-14 text-right"><%= cv.created_at.strftime("%B %d, %Y") %></p>
              <div class="d-flex">
                <h6 class="text-primary pr-1"><%= cv.full_name %></h6>
                <span class="text-muted font-size-14 pl-1"><%= cv.user&.current_location&.original_address %></span>
              </div>

              <% latest_experience = cv.experiences.chronological_order.take %>
              <div>
                <span class="badge badge-pill badge-primary badge-primary-light text-primary font-weight-normal font-size-9 p-2">
                <%= latest_experience.title.upcase %>
                </span>
                <span class="font-size-9"> at <%= latest_experience.company %></span>
              </div>
              <p class="mb-0 font-size-14 text-right">
                <%= link_to cv_section_path(cv.user.subdomain) do %>
                  <i class="ml-2 fas fa-angle-right"></i> View CV
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="text-center pt-5">
  <nav class="d-inline-block">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>
