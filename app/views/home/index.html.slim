h1 = t('content.main.welcome.title', first_name: current_user.first_name, last_name: current_user.last_name)
.welcome-options
  p = t('content.main.welcome.question')
  ul
    - if @cv.present?
      li
        p = t('content.main.welcome.check_cv_html',
                link: (link_to t('content.main.welcome.check_cv_button'), cv_path))
    - else
      li
        p = t('content.main.welcome.create_cv_html',
                link: (link_to t('content.main.welcome.create_cv_button'), new_cv_path))
    li
      p = t('content.main.welcome.search_cv_html', link: (link_to t('content.main.welcome.search_cv_button'), '#'))
