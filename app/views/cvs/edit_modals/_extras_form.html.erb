<%= render 'shared/modal_header', id: 'edit_cv_extras', title: t('content.main.cv.edit.extras.title') do %>
  <%= form_with model: @cv do |f| %>
    <div class="modal-body p-5">
      <div class="alert alert-danger"></div>
      <div class="needs-validation" novalidate="">
        <div class="row">
          <div class="col-12">
            <div class="form-group mb-5">
              <%= f.label :interests, t('content.main.cv.show.interests'), class: 'text-muted d-block' %>
              <%= f.text_area :interests, class: 'form-control form-control-lg', rows: 3, "aria-label" => "interests" %>
            </div>
          </div>
          <div class="col-12">
            <div class="form-group mb-5">
              <%= f.label :future_plans, t('content.main.cv.show.future_plans'), class: 'text-muted d-block' %>
              <%= f.text_area :future_plans, class: 'form-control', rows: 3, "aria-label" => "future_plans" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12 text-right">
            <%= f.button t('content.main.buttons.reset'), type: :reset, class: 'btn btn-primary' %>
            <%= f.submit t('content.main.buttons.save'), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
