<div class="border-top py-5 pl-3 pl-md-6 pr-2">
  <div class="d-flex align-items-center justify-content-between pb-4">
    <h6><%= t('content.main.cv.show.locations.title') %></h6>
    <%= link_to new_location_path, remote: true do %>
      <span class="badge rounded-circle badge-primary-light text-primary p-2"><i class="icon-plus"></i></span>
    <% end %>
  </div>

  <% current_user.locations.chronological_order.each do |location| %>
    <div class="d-flex flex-row font-size-14 pt-5">
      <div class="ml-2 border-bottom w-100">
        <h6><%= location.city %></h6>
        <p><%= location.geocoded_address %></p>
      </div>
      <%= link_to edit_location_path(location), remote: true do %>
        <span class="badge rounded-circle badge-primary-light text-primary p-2"><i class="icon-pencil"></i></span>
      <% end %>
      <%= link_to location_path(location), method: :delete, data: { confirm: t('confirmation') } do %>
        <span class="badge rounded-circle badge-primary-light text-primary p-2"><i class="fas fa-trash-alt"></i></span>
      <% end %>
    </div>
  <% end %>
</div>
