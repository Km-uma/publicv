<div class="border-top pt-5 pl-3 pl-md-6 pr-2">
  <div class="d-flex align-items-center justify-content-between">
    <h6><%= t('content.main.cv.show.experience.title') %></h6>
    <%= link_to new_cv_experience_path, remote: true do %>
      <span class="badge rounded-circle badge-primary-light text-primary p-2"><i class="icon-plus"></i></span>
    <% end %>
  </div>

  <% @cv.experiences.chronological_order.each do |experience| %>
    <div class="d-flex flex-row font-size-14 pt-5">
      <span class="badge badge-light h-100 p-1 mr-2 border">
        <%= image_pack_tag 'icons/gogle-logo.svg', alt: 'google' %>
      </span>

      <div class="ml-2 pb-5 border-bottom w-100">
        <h6><%= experience.title %></h6>
        <h6 class="font-weight-normal mb-1"><%= experience.company %></h6>
        <% if experience.location.present? %>
          <span><%= t('content.main.cv.show.experience.location', location: experience.location) %></span><br>
        <% end %>
        <% if experience.website_url.present? %>
          <p>
            <a href="<%= experience.website_url %>" target="_blank"><%= experience.website_url %></a></p>
        <% end %>
        <p><%= work_period(experience.started_on, experience.ended_on) %></p>
        <p class="mb-0">Core Competencies: </p>
        <span><%= experience.description.presence %></span>
      </div>
      <%= link_to edit_cv_experience_path(experience), remote: true do %>
        <span class="badge rounded-circle badge-primary-light text-primary p-2"><i class="icon-pencil"></i></span>
      <% end %>

      <%= link_to cv_experience_path(experience), method: :delete, data: { confirm: t('confirmation') } do %>
        <span class="badge rounded-circle badge-primary-light text-primary p-2"><i class="fas fa-trash-alt"></i></span>
      <% end %>
    </div>
  <% end %>
</div>
